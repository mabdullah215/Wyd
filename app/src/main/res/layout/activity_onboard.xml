<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_onboard"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/uber_move_bold"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="21sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/heading"
        android:lineSpacingExtra="2.5sp"
        android:text="@string/heading" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/uber_move_regular"
        android:textStyle="normal"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:layout_below="@+id/heading"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="2.5sp"
        android:text="@string/subheading" />


    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="Get Started"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/button_started"
        android:background="@drawable/square_corner"
        android:backgroundTint="@color/white"
        android:padding="@dimen/_12sdp"
        android:textColor="@color/purple_200"
        android:fontFamily="@font/uber_move_bold"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>