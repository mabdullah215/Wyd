<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_10sdp"
        android:text="Profile Details"
        android:fontFamily="@font/uber_move_bold"
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:src="@drawable/user_avatar" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/uber_move_regular"
                android:text="Username"
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/square_corner"
                android:backgroundTint="#f2f2f2"
                android:hint="Ex: Malabar Gold"
                android:padding="15dp"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/uber_move_regular"
                android:text="Email"
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/square_corner"
                android:backgroundTint="#f2f2f2"
                android:gravity="start"
                android:hint="someone@gmail.com"
                android:padding="15dp"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/uber_move_regular"
                android:text="Litlte About you"
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_details"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/square_corner"
                android:backgroundTint="#f2f2f2"
                android:gravity="start"
                android:hint="About yourself that you want to share with people"
                android:padding="15dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/square_corner"
                android:backgroundTint="@color/purple_200"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>